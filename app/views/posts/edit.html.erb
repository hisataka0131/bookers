<section class="edit">
<h2 class="edit-head">Editng Book<h2>
<%= form_for(@post) do |f| %>
<div class="edit-text">
<h4>Title</h4>
<%= f.text_field :title, class:"book_title" %>
</div>
<div class="edit-text">
<h4>Body</h4>
<%= f.text_area :body, class:"book_body" %>
</div>
<p><%= f.submit 'Update Book' %></p>

<% end %>
<div class="edit-text">
<%= link_to "show", post_path(@post), class:"show_#{@post.id}" %>
|
<%= link_to "Back", "/posts", class:"back" %>
</div>
</section>
